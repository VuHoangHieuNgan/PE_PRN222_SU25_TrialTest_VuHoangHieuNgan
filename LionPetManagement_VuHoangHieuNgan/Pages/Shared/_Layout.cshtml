@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - LionPetManagement_VuHoangHieuNgan</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/LionPetManagement_VuHoangHieuNgan.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">LionPetManagement_VuHoangHieuNgan</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/LionProfiles/Index">Lion Profile</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
						</li>
					</ul>
				</div>
				<ul class="navbar-nav">
					@if (User.Identity!.IsAuthenticated)
					{
						<li class="nav-item px-3">
							<span class="navbar-text me-3">
								<i class="fas fa-user-circle me-2"></i>
								Xin chào, @Context.Request.Cookies["UserName"]
								@if (User.HasClaim(ClaimTypes.Role, "2"))
								{
									<span class="badge bg-success ms-2">Manager</span>
								}
								else if (User.HasClaim(ClaimTypes.Role, "3"))
								{
									<span class="badge bg-primary ms-2">Staff</span>
								}
							</span>
						</li>
						<li class="nav-item px-3">
							@Html.AntiForgeryToken() 
							<a class="nav-link text-dark" asp-area="" asp-page="/Authentication/Logout">Logout</a>
						</li>
					}
					else
					{
						@* NotAuthorized - User chưa đăng nhập *@
						<li class="nav-item px-3">
							<a class="nav-link text-dark" asp-area="" asp-page="/Authentication/Login">Login</a> 
						</li>
					}
				</ul>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - LionPetManagement_VuHoangHieuNgan - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>